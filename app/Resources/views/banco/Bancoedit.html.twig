{% extends "layout/base-layout.html.twig" %}

{% block page_title %}Cat√°logos{% endblock %}
{% block page_subtitle %}Banco | Editar{% endblock %}

{% block page_content %}

    <div class="box box-primary" style="width: 100%">

        <div  style="width:70%; margin-top: 2%; margin-left: 15%; background-color:#F3F3F3; border-radius:5px " class="panel panel-default">

            <div class="col col-md-12" align="center" >
                <img style="width:80px;margin-top: 2%;margin-bottom: 2%" src="{{ asset('img/Banco.png') }}"></img>
            </div>
            <div class="col col-md-12 " align="center" style="margin-top:-15px">
                <h2 class="col col-md-12" style="font-family: palatino header" >Modificar Banco</h2>
                <h5 class="col col-md-12" style="color:grey; font-family: palatino body;margin-top: -4px">Complete los campos requeridos:<span style="font-size: 25;color: red" >*</span></h5>

            </div>
            <hr>
            <div  class="container"  style="width: 75%; margin-top: 3%; margin-bottom: 3%">

                     {{ form_start(edit_form) }}
                     <div class="row">
                         <div class="col col-md-12" align="left">
                             <label for="form_banco">Banco<span style="font-size: 25;color: red" >*</span></label>
                             {{ form_widget(edit_form.nombanco) }}
                             {{ form_errors(edit_form.nombanco) }}
                         </div>
                     </div>

                         <br>
                     <div class="row">
                         <div class="col col-md-12" align="left">
                             <label for="form_estado">Estado<span style="font-size: 25;" ></span></label>
                             {{ form_widget(edit_form.estadobanco) }}
                             {{ form_errors(edit_form.estadobanco) }}
                         </div>
                     </div>

                <div align="right">
                <a href="{{ path('banco_index') }} " class="btn btn-danger btn-xl">Cancelar</a>
                <input  class="btn btn-success btn-xl" type="submit"  value="Guardar" />
                </div>
                     {{ form_end(edit_form) }}


                <br>
                <br>
            </div>
            </br>
        </div>
        <br>
        <br>
    </div>


{% endblock %}
