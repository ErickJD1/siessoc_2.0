{% extends 'layout/base-layout.html.twig' %}

{% block page_title %} Registro Academico{% endblock %}
{% block page_subtitle %}Carrera{% endblock %}

{% block page_content %}
    <div class="box box-primary" style="width: 100%;">

        <div  style="width:90%; margin-top: 5%; margin-left: 5%; background-color:#F3F3F3; border-radius:5px " class="panel panel-default">

            <div class="col col-md-12" align="center" >
                <img style="width:80px;margin-top: 2%;margin-bottom: 2%" src="{{ asset('img/icons/carrera.png') }}"></img>
            </div>
            <div class="col col-md-12 " align="center" style="margin-top:-15px">
                <h2 class="col col-md-12" style="font-family: palatino header" >Editar Carrera</h2>
                <h4 class="col col-md-12" style="color:grey; font-family: palatino body; margin-top: -3px;">Complete los campos requeridos:<span style="font-size: 25;color: red" >*</span></h4>

            </div>
            <hr>
            <div  class="container"  style="width: 80%; margin-top: 3%; margin-bottom: 3%">
                {{ form_start(edit_form) }}
                <div class="row">
                    <div class="col col-md-12">
                        <label for="form_lastname">Nombre<span style="font-size: 25;color: red" >*</span></label>
                        {{ form_widget(edit_form.nomcarrera) }}
                        {{ form_errors(edit_form.nomcarrera) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col col-md-12">
                        <label for="form_lastname">Descripci√≥n<span style="font-size: 25;color: red" >*</span></label>
                        {{ form_widget(edit_form.descripcioncarrera) }}
                        {{ form_errors(edit_form.descripcioncarrera) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col col-md-12">
                        <label for="form_lastname">Estado</label>
                        {{ form_widget(edit_form.estadocarrera) }}
                        {{ form_errors(edit_form.estadocarrera) }}
                    </div>
                </div>


                <br>
                <div class="row">
                    <div class="col col-md-12" align="right">
                        <a href="{{ path('carrera_index') }}" class="btn btn-danger btn-xl">Cancelar</a>
                        <input  class="btn btn-success btn-xl" id="enviar" type="submit"  value="Guardar" />
                    </div>
                </div>
                    {{ form_end(edit_form) }}
                <br>
            </div>
        </div>
        <br>
        <br>
        <br>
    </div>


{% endblock %}
