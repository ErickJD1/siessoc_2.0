{% extends "layout/base-layout.html.twig" %}

{% block page_title %} Colaboracion | {% endblock %}
{% block page_subtitle %}Colaboracion Monetaria {% endblock %}

{% block page_content %}

<div class="box box-primary">
<div style="width:90%; margin-left:5%; margin-top: 2% ">

<div align="left">
      <button class="btn btn-primary" data-toggle="modal" data-target="#CrearCola"> + Registrar Colaboracion</button>
      {{ render(controller('AppBundle:Colaboracionmonetaria:createColaboracion')) }}
</div>
<br> </br>

    <table class="table table-bordered table-hover table-striped table-responsive" style="width:100%" id="tabelMahasiswa">
          <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Colaboracion $</th>
                <th>Monto $</th>
                <th>Estado</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>

        {%for colaboracionmonetaria in colaboracion %}
        <tr>
              <td>{{ colaboracionmonetaria.idcolaboracion }}</td>
              <td>{{ colaboracionmonetaria.Descripcioncolaboracion }}</td>
              <td>{{ colaboracionmonetaria.Montomescolaboracion }}</td>
              <td>{{ colaboracionmonetaria.Saldocolaboracion }}</td>
              <td>{% if colaboracionmonetaria.Estadocolaboracion %}Concluido{% else %}Pendiente{% endif %}</td>
              <td>
                <div style="float:left;"><button class="" style="background-color: transparent; border: none;" data-toggle="modal" data-target="#showCola{{ colaboracionmonetaria.idcolaboracion }}"><i class="fa fa-eye" style="font-size: 20px"></i></button>
                        {{ render(controller('AppBundle:Colaboracionmonetaria:showColaboracion', { 'id' : colaboracionmonetaria.idcolaboracion } )) }}
                </div>

                <div style="float:left;"><button class="" style="background-color: transparent;  border: none;" data-toggle="modal" data-target="#EditCola{{ colaboracionmonetaria.idcolaboracion }}"><i class="fa fa-edit" style="font-size: 20px"></i></button>
                        {{ render(controller('AppBundle:Colaboracionmonetaria:editColaboracion', { 'id' : colaboracionmonetaria.idcolaboracion } )) }}
                </div>
              </td>
          </tr>

        </div>
      {% endfor %}
      </tbody>
  </table>
  </div>
  </div>
{% endblock %}
