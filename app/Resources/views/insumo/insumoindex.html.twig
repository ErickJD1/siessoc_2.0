{% extends "layout/base-layout.html.twig" %}

{% block page_title %}Insumos{% endblock %}
{% block page_subtitle %}Lista De Insumos{% endblock %}

{% block page_content %}

    <div class="box box-primary">
        <div style="width:90%; margin-left:5%; margin-top: 2% ">

            <div align="left">
                <a style="font-size: 15px" href="{{ path('insumo_new') }}" class="btn btn-success btn-sm"><i style="font-size: 20px" class="fa fa-plus-circle"></i> Insumo</a>
            </div>
            <br>

            <table class="table table-bordered table-hover table-striped table-responsive" style="width:100%" id="tabelMahasiswa">
                <thead class="thead-light">
            <tr>
                <th>Insumo</th>
                <th>Descripcion</th>
                <th>Estado</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for insumo in insumos %}
            <tr>
                <td>{{ insumo.nombreinsumo }}</td>
                <td>{{ insumo.descripcioninsumo }}</td>
                <td>{% if insumo.estadoinsumo %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('insumo_show', { 'id': insumo.idinsumo }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('insumo_edit', { 'id': insumo.idinsumo }) }}">edit</a>
                        </li>
                    </ul>
                </td>
             </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}