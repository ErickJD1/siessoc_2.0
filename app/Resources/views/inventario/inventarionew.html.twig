{% extends "layout/base-layout.html.twig" %}

{% block page_title %} Inventario | {% endblock %}
{% block page_subtitle %}Registrar{% endblock %}

{% block page_content %}

    <div class="box box-primary" style="width: 100%">

         <div  style="width:90%; margin-top: 2%; margin-left: 5%; background-color:#F3F3F3; border-radius:5px " class="panel panel-default">

            <div class="col col-md-12" align="center" > 
                <img style="width:80px;margin-top: 2%;margin-bottom: 2%" src="{{ asset('img/icons/inventory.png') }}"></img>
            </div>   
            <div class="col col-md-12 " align="center" style="margin-top:-15px"> 
                <h2 class="col col-md-12" style="font-family: palatino header" >Registrar Art√≠culo</h2>
                <h4 class="col col-md-12" style="color:grey; font-family: palatino body; margin-top: -3px;">Complete los campos requeridos:<span style="font-size: 25;color: red" >*</span></h4>

            </div>

          <br>
    <div  class="container"  style="width: 75%; margin-top: 3%; margin-bottom: 3%">


    {{ form_start(form) }}
        <div class="row">
          <div class="col col-md-4">
            <label for="form_Cantidad">Cantidad<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.cantidadinventario, {'attr': {'onkeypress': 'return isNumberKey(event)', 'maxlength':'3'}})}}
              {{ form_errors(form.cantidadinventario) }}
          </div>
  
          <div class="col col-md-8">
            <label for="form_Insumo">Insumo<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.idinsumo) }}
              {{ form_errors(form.idinsumo) }}
          </div>
        </div>
         
        <br>
        <div class="row">
         <div class="col col-md-6">
             <label for="form_FechaIngreso">Fecha de Ingreso<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.fechainventario) }}
              {{ form_errors(form.fechainventario) }}
         </div>
        </div>

          <br>

            <div class="col col-md-12" align="right">
                <a href="{{ path('inventario_index') }}" class="btn btn-danger btn-xl">Cancelar</a>
                  <input  class="btn btn-success btn-xl" type="submit"  value="Guardar" />
             </div>
     
    {{ form_end(form) }}

                <br>
            </div>

        </div>
        <br>
    </div>

 {% endblock %}

 {%block javascripts_inline %}
    <script>
        {{parent()}}
  
      function isNumberKey(evt)
      {
         var charCode = (evt.which) ? evt.which : event.keyCode
         if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;

         return true;
      }
    </script>

{% endblock %}   

