{% extends "layout/base-layout.html.twig" %}

{% block page_title %} Inventario | {% endblock %}
{% block page_subtitle %}Registro Articulo {% endblock %}

{% block page_content %}

    <div class="box box-primary" style="width: 100%;">

        <div  style="width:90%; margin-top: 5%; margin-left: 5%; background-color:#F3F3F3; border-radius:5px " class="panel panel-default"> 

            <div class="col col-md-12" align="center" > 
                <img style="width:80px;margin-top: 2%;margin-bottom: 2%" src="{{ asset('img/Banco.png') }}"></img>
            </div>   
            <div class="col col-md-12 " align="center" style="margin-top:-15px"> 
                <h2 class="col col-md-12" style="font-family: palatino header" >Registrar Articulo</h2>
                <h4 class="col col-md-12" style="color:grey; font-family: palatino body; margin-top: -3px;">Complete los campos requeridos:<span style="font-size: 25;color: red" >*</span></h4>

            </div>
            <hr>
            <div  class="container"  style="width: 80%; margin-top: 3%; margin-bottom: 3%">

    {{ form_start(form) }}
        <div class="row">
        <div class="col col-md-8">
            <label for="form_Cantidad">Cantidad Total<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.cantidadinventario) }}
              {{ form_errors(form.cantidadinventario) }}
        </div>
        </div>
        <br>
        <div class="row">
        <div class="col col-md-8">
            <label for="form_Insumo">Insumo<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.idinsumo) }}
              {{ form_errors(form.idinsumo) }}
        </div>
        </div>
        <br>
        <div class="row">
        <div class="col col-md-8">
            <label for="form_FechaIngreso">Fecha Ingreso<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.fechainventario) }}
              {{ form_errors(form.fechainventario) }}
        </div>
        </div>
 <br>
         <div class="row">
            <div class="col col-md-12" align="right">
                <a href="{{ path('inventario_index') }}" class="btn btn-primary btn-xl">Cancelar</a>
                  <input  class="btn btn-success btn-xl" type="submit"  value="Guardar" />
             </div>
         </div>
     
    {{ form_end(form) }}
            </div>
        </div>
    </div>

 {% endblock %}

