{% extends "layout/base-layout.html.twig" %}

{% block page_content %}
    <h1>Materium</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombremateria</th>
                <td>{{ materium.nombremateria }}</td>
            </tr>
            <tr>
                <th>Unidadesvalorativasmateria</th>
                <td>{{ materium.unidadesvalorativasmateria }}</td>
            </tr>
            <tr>
                <th>Estadomateria</th>
                <td>{{ materium.estadomateria }}</td>
            </tr>
            <tr>
                <th>Idmateria</th>
                <td>{{ materium.idmateria }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('materia_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('materia_edit', { 'id': materium.idmateria }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
