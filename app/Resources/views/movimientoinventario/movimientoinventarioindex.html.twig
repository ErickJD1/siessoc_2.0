{% extends "layout/base-layout.html.twig" %}

{% block page_title %} Movimiento Inventario | {% endblock %}
{% block page_subtitle %}Lista De Movimientos Inventario {% endblock %}

{% block page_content %}

<div class="box box-primary">
<div style="width:90%; margin-left:5%; margin-top: 2% ">

<div align="left">
     <a style="font-size: 15px" href="{{ path('inventario_index') }}" class="btn btn-success btn-sm"><i style="font-size: 20px" class="fa fa-plus-back"></i> Regresar</a>
</div>
<br>

        <table class="table table-bordered table-hover table-striped table-responsive" style="width:100%" id="tabelMahasiswa">
            <thead class="thead-light">
            <tr>
                <th>Movimiento</th>
                <th>Becario</th>
                <th>Articulo</th>
                <th>Cantidad Entregada</th>
                <th>Estado</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for movimientoinventario in movimientoinventarios %}
            <tr>
                <td>{{ movimientoinventario.nombremovinv }}</td>
                <td>{{ movimientoinventario.idexpbecario }}</td>
                <td>{{ movimientoinventario.idinventario }}</td>
                <td>{{ movimientoinventario.cantidadentrega }}</td>
                <td>{% if movimientoinventario.estadomovinv==1 %}Concluido{% else %}Pendiente{% endif %}</td>
                  <td align="center">
                    
                    <div class="options btn-group btn-group-sm">
                  <a class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-caret-down no-margin"></i> Opciones
                  </a>
                  <ul class="dropdown-menu">

                    <li>
                        <a href="#" data-toggle="modal" data-target="#VermovInv{{ movimientoinventario.idmovinv }}">
                            <i class="fa fa-eye fa-margin"></i> Mostrar
                        </a>
                    </li>

                     <li>
                        <a href="{{ path('movimientoinventario_show',{ 'id' : movimientoinventario.idmovinv }) }}" >
                            <i class="fa fa-edit fa-margin"></i> Editar
                        </a>
                    </li>
                    
                    </ul>
                     {{ render(controller('AppBundle:Movimientoinventario:show', { 'id' : movimientoinventario.idmovinv } )) }}
                  </div>  
                    
                </td>
            </tr>
       {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}
