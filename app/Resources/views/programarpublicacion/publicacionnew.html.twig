{% extends "layout/base-layout.html.twig" %}

{% block page_title %} Publicaciones | {% endblock %}
{% block page_subtitle %}Programar Publicacion {% endblock %}

{% block page_content %}

      <div class="box box-primary" style="width: 100%">

         <div  style="width:90%; margin-top: 2%; background-color:#F3F3F3; margin-left: 5%" class="panel panel-default">

            <div class="col col-md-12" align="center" > 
                <img style="width:80px;margin-top: 2%;margin-bottom: 2%" src="{{ asset('img/blog.png') }}"></img>
            </div>   
            <div class="col col-md-12 " align="center" style="margin-top:-15px"> 
                <h2 class="col col-md-12" style="font-family: palatino header" >Programar Publicacion</h2>
                <h5 class="col col-md-12" style="color:grey; font-family: palatino body;margin-top: -4px">Complete los campos requeridos</h5>

            </div>
            <hr>
            <div  class="container"  style="width: 75%; margin-top: 3%; margin-bottom: 3%">

                  {{ form_start(form, {'action': path('programarpublicacion_new'), 'method': 'POST'}) }}
                  {{ form_widget(form) }}
       <div class="row">
                    <div class="col col-md-12" align="right">
                        <a href="{{ absolute_url(asset('')) }}programarpublicacion" class="btn btn-primary btn-xl">Cancelar</a>
                        <input  class="btn btn-success btn-xl" type="submit"  value="Guardar" />


                    </div>
                </div>

                {{ form_end(form) }}
                <br>
                <br>
            </div>
            </br>
        </div>
        <br>
        <br>
    </div>


{% endblock %}
