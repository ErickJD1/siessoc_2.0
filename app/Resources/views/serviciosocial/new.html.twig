{% extends "layout/base-layout.html.twig" %}

{% block page_title %} Servicio Social | {% endblock %}
{% block page_subtitle %}Registrar Servicio Social{% endblock %}

{% block page_content %}

    <div class="box box-primary" style="width: 100%">

         <div  style="width:90%; margin-top: 2%; margin-left: 5%; background-color:#F3F3F3; border-radius:5px " class="panel panel-default">

            <div class="col col-md-12" align="center" > 
                <img style="width:80px;margin-top: 2%;margin-bottom: 2%" src="{{ asset('img/icons/inventory.png') }}"></img>
            </div>   
            <div class="col col-md-12 " align="center" style="margin-top:-15px"> 
                <h2 class="col col-md-12" style="font-family: palatino header" >Registrar Art√≠culo</h2>
                <h4 class="col col-md-12" style="color:grey; font-family: palatino body; margin-top: -3px;">Complete los campos requeridos:<span style="font-size: 25;color: red" >*</span></h4>

            </div>

          <br>
    <div  class="container"  style="width: 60%; margin-top: 3%; margin-bottom: 3%">
        
     {{ form_start(form, {'attr': {'id': 'appbundle_serviciosocial'}}) }}
        <div class="row">
         <div class="col col-md-12">
             <label for="form_Becario">Becario<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.idexpbecario)}}
              {{ form_errors(form.idexpbecario) }}
         </div>
        </div>
         <br>
          <div class="row">
         <div class="col col-md-12">
             <label for="form_Proyectp">Proyecto<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.idproyectservisocial) }}
              {{ form_errors(form.idproyectservisocial) }}
         </div>
        </div>
          <br>
          <div class="row">
         <div class="col col-md-12">
             <label for="form_FechaAprobacion">Fecha Aprobacion<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.fechaaprovacionservicio) }}
              {{ form_errors(form.fechaaprovacionservicio) }}
         </div>
        </div>
           <br>
          <div class="row">
         <div class="col col-md-12">
             <label for="form_FechaInicio">Fecha Inicio<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.fechainicioservicio) }}
              {{ form_errors(form.fechainicioservicio) }}
         </div>
        </div>
          <br>
          <div class="row">
         <div class="col col-md-12">
             <label for="form_FechaFin">Fecha Previa a Finalizar<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.fechafinservicio) }}
              {{ form_errors(form.fechafinservicio) }}
         </div>
        </div>
         <br>
          <div class="row">
         <div class="col col-md-12">
             <label for="form_EstadoProyecto">Estado Proyecto<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.estadoproyecto) }}
              {{ form_errors(form.estadoproyecto) }}
         </div>
        </div>
         <br>
          <div class="row">
         <div class="col col-md-12">
             <label for="form_Aprobar">Aprobar<span style="font-siez: 25; color: red">*</span></label>
              {{ form_widget(form.estadoservicio) }}
              {{ form_errors(form.estadoservicio) }}
         </div>
        </div>
         <br>
         <div class="row">
           <div class="col col-md-12" align="right">
               <a style="font-size: 15px" href="{{ path('serviciosocial_index') }}" class="btn btn-danger btn-xl">Cancelar</a>
           <input  class="btn btn-success btn-xl" type="submit"  value="Guardar" />
            </div>
          </div>
     {{ form_end(form) }}
      <br>
            </div>

        </div>
        <br>
    </div>

 {% endblock %}


