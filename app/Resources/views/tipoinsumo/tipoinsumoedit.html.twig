{% extends "layout/base-layout.html.twig" %}

{% block page_title %} Tipo de Insumo | {% endblock %}
{% block page_subtitle %}Editar {% endblock %}

{% block page_content %}

<div class="box box-primary" style="width: 100%">

         <div  style="width:90%; margin-top: 2%; margin-left: 5%; background-color:#F3F3F3; border-radius:5px " class="panel panel-default">

            <div class="col col-md-12" align="center" >
                <img style="width:80px;margin-top: 2%;margin-bottom: 2%" src="{{ asset('img/icons/product.png') }}"></img>
            </div>
            <div class="col col-md-12 " align="center" style="margin-top:-15px">
                <h2 class="col col-md-12" style="font-family: palatino header" >Modificar Tipo de Insumo</h2>
                <h5 class="col col-md-12" style="color:grey; font-family: palatino body;margin-top: -4px">Complete los campos requeridos:<span style="font-size: 25;color: red" >*</span></h5>

            </div>
            <hr>
            <div  class="container"  style="width: 75%; margin-top: 3%; margin-bottom: 3%">

              {{ form_start(edit_form) }}
            
            <div class="row">
                <div class="col col-md-12" align="left">
                        <label for="form_TipoInsumo">Tipo de Insumo<span style="font-size: 25;color: red" >*</span></label>
                        {{ form_widget(edit_form.tipoinsumo) }}
                        {{ form_errors(edit_form.tipoinsumo) }}
                </div>    
            </div>
                <br>
            <div class="row">
                    <div class="col col-md-12" align="left">
                        <label for="form_estado">Estado<span style="font-size: 25;" ></span></label>
                        {{ form_widget(edit_form.estadotipoinsumo) }}
                        {{ form_errors(edit_form.estadotipoinsumo) }}
                    </div>
            </div>
                    
              <div class="row">
                    <div class="col col-md-12" align="right">
                        <a href="{{ absolute_url(asset('')) }}tipoinsumo" class="btn btn-danger btn-xl">Cancelar</a>
                        <input  class="btn btn-success btn-xl" type="submit"  value="Guardar" />


                    </div>
                </div>
                    {{ form_end(edit_form) }}
                <br>
                <br>
            </div>
            </br>
        </div>
        <br>
        <br>
    </div>
 {% endblock %}
