{% extends "layout/base-layout.html.twig" %}

{% block page_title %}Tipo de Insumo | {% endblock %}

{% block page_content %}

<div class="box box-primary">
<div style="width:90%; margin-left:5%; margin-top: 2% ">
            <div align="left">
                <a style="font-size: 15px" href="{{ path('tipoinsumo_new') }}" class="btn btn-success btn-sm"><i style="font-size: 20px" class="fa fa-plus-circle"></i> Tipo de Insumo</a>
            </div>
            <br>

            <table class="table table-bordered table-hover table-striped table-responsive" style="width:100%" id="tabelMahasiswa">
                <thead class="thead-light">
            <tr>
                <th width="50%">Tipo de Insumo</th>
                <th width="30%">Estado</th>
                <th width="20%">Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tipoinsumo in tipoinsumo %}

            <tr>
                <td>{{ tipoinsumo.tipoinsumo }}</td>
                <td>{% if tipoinsumo.estadotipoinsumo==1 %}Activo{% else %}Inactivo{% endif %}</td>
                <td align="center">
                <div class="btn-group" style="width:100%">
                  <button class="" style="background-color: transparent; border: none;" data-toggle="modal" data-target="#VerInsumo{{ tipoinsumo.Idtipoinsumo }}"><i class="fa fa-eye no-margin" style="font-size: 20px; color: deepskyblue"></i></button>
                          {{ render(controller('AppBundle:Tipoinsumo:show', { 'id' : tipoinsumo.Idtipoinsumo } )) }}
                  
                    <a href="{{ path('tipoinsumo_edit',{ 'id' : tipoinsumo.Idtipoinsumo }) }}" style="background-color: transparent; border: none;"><i class="fa fa-edit no-margin" style="font-size: 20px; color: limegreen"></i></a>
                  
                   <button class="" style="background-color: transparent; border: none;" data-toggle="modal" data-target="#deleteinsumo{{ tipoinsumo.Idtipoinsumo }}"><i class="fa fa-trash no-margin" style="font-size: 20px; color: crimson"></i></button>
                          {{ render(controller('AppBundle:Tipoinsumo:showDelete', { 'id' : tipoinsumo.Idtipoinsumo } )) }}
                  </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}