
{% extends 'base.html.twig' %}
{% block stylesheets%}
<style>

.jumbotron {
background: #358CCE;
color: #FFF;
border-radius: 0px;
}
.jumbotron-sm { padding-top: 24px;
padding-bottom: 24px; }
.jumbotron small {
color: #FFF;
}
.h1 small {
font-size: 24px;
}

</style>
{% endblock stylesheets %}
{% block body %}
                
 <div class="jumbotron jumbotron-sm">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <h1 class="h1" align="center">Contáctanos</h1>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
            {{ form_start(form, {'action': path('web_contacto'), 'method': 'POST'}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                          <label for="form_contacto">Nombre<span style="font-size: 25;color: red" >*</span></label>
                          {{ form_widget(form.nombre) }}
                          {{ form_errors(form.nombre) }}
                        </div>
                        <div class="form-group">
                          <label for="form_contacto">Correo Electrónico<span style="font-size: 25;color: red" >*</span></label>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                                {{ form_widget(form.correo) }}
                                {{ form_errors(form.correo) }}
                        </div>
                        </div>
                        <div class="form-group">
                          <label for="form_contacto">Asunto<span style="font-size: 25;color: red" >*</span></label>
                          {{ form_widget(form.asunto) }}
                          {{ form_errors(form.asunto) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                          <label for="form_contacto">Mensaje<span style="font-size: 25;color: red" >*</span></label>
                          {{ form_widget(form.mensaje,{'attr':{'class':'form-control', 'rows':'9', 'cols':'25' }})}}
                          {{ form_errors(form.mensaje) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary pull-right">Guardar</button>
                    </div>
                </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>


{% endblock %}
