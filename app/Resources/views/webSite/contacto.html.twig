
{% extends 'base.html.twig' %}
{% block stylesheets%}
    {{parent()}}
    <style>

        .jumbotron {
            background: #358CCE;
            color: #FFF;
            border-radius: 0px;
        }
        .jumbotron-sm { padding-top: 24px;
                        padding-bottom: 24px; }
        .jumbotron small {
            color: #FFF;
        }
        .h1 small {
            font-size: 24px;
        }



    </style>
{% endblock %}
{% block body %}



    <div class="container">
        <h1 class="mt-4 mb-3">ESSOC
            <small>Contáctanos</small>
        </h1>   
        <hr>
        <div class="row">
            <div class="col-md-12">
                <div class="well well-md">
                    {{ form_start(form, {'action': path('web_contacto'), 'method': 'POST'}) }}
                    <div class="row" style="width: 90%; margin-left: 5%; ">

                        <div class="col-md-6" style="margin-top:3%">
                            <div class="form-group">
                                <label for="form_contacto">Nombre</label>
                                {{ form_widget(form.nombre) }}
                                {{ form_errors(form.nombre) }}
                            </div>
                            <div class="form-group">
                                <label for="form_contacto">Correo Electrónico</label>
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                        {{ form_widget(form.correo) }}
                                        {{ form_errors(form.correo) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="form_contacto">Asunto</label>
                                {{ form_widget(form.asunto) }}
                                {{ form_errors(form.asunto) }}
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top:3%">
                            <div class="form-group">
                                <label for="form_contacto">Mensaje</label>
                                {{ form_widget(form.mensaje,{'attr':{'class':'form-control', 'rows':'9', 'cols':'25' }})}}
                                {{ form_errors(form.mensaje) }}
                            </div>
                        </div>

                        <div class="col-md-12" style="margin-bottom:3%">
                            <button type="submit" class="btn btn-success pull-right">Enviar</button>
                        </div>

                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}


