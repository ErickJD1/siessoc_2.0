
{% extends 'base.html.twig' %}
{% block stylesheets%}
    {{parent()}}
  <style>
.carousel-item {
  height: 65vh;
  min-height: 350px;
  background: no-repeat center center scroll;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
  </style>
{% endblock %}
{% block body %}
 
 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
     {% for primerapublicacion in first_id %}
       {% for publicacioncontenido in publicaciones %}
         {% if( publicacioncontenido.idcontenido== primerapublicacion.idcontenido) %}
      <!-- Slide One - Set the background image for this slide in the line below -->
      <div class="carousel-item active" style="background-image:url('{{ asset('images/profile/'~publicacioncontenido.getContenidoPicture()) | imagine_filter('big') }}')">
        <div class="carousel-caption d-none d-md-block">
          <h3 class="display-4">{{primerapublicacion.titulo}}</h3>
          <p class="lead">{{primerapublicacion.descripcioncontenido}}</p>
        </div>
      </div>
      <!-- Slide Two - Set the background image for this slide in the line below -->
        {%else%}
      <div class="carousel-item" style="background-image:url('{{ asset('images/profile/'~publicacioncontenido.getContenidoPicture()) | imagine_filter('big') }}')">
                                                                 
        <div class="carousel-caption d-none d-md-block">
          <h3 class="display-4">{{publicacioncontenido.titulo}}</h3>
          <p class="lead">{{publicacioncontenido.descripcioncontenido}}</p>
        </div>
      </div> 
       {% endif %}
     {% endfor %}
    {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
  </div>

{% endblock %}


{% block javascripts_inline %}

  <script language="JavaScript" type="text/javascript">
      
   

  </script>
 
{%endblock%}